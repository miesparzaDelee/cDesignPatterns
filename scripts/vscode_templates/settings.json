{
    "files.exclude": {
        "build/ch1.md": true,
        "build/ch2.md": true,
        "build/ch3_.md": true,
        "build/ch3_1.md": true,
        "build/ch3_2.md": true,
        "build/ch3_3.md": true,
        "build/ch3_4.md": true,
        "build/ch3_5.md": true,
        "build/ch3_6.md": true,
        "build/ch3_7.md": true,
        "build/ch3_8.md": true,
        "build/ch3_9.md": true,
        "build/ch3_10.md": true,
        "build/ch3_11.md": true,
    },
    "files.associations": {
        "callbackpattern.h": "c"
    },
    "[markdown]": {
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        }
    },
    "path-autocomplete.triggerOutsideStrings": true,
    // 2. Map the root folder so 'src/' works immediately
    "path-autocomplete.pathMappings": {
        "/": "${folder}/",
        "./": "${folder}/",
        "src": "${folder}/src"
    },
    // 3. (Optional) Exclude the build folder from suggestions
    "path-autocomplete.excludedItems": {
        "**/*.js": {
            "when": "**"
        },
        "**/*.map": {
            "when": "**"
        },
        "build": {
            "when": "**"
        },
        "test_env": {
            "when": "**"
        }
    },
    "triggerTaskOnSave.tasks": {
        "Build Book": [
            "book/*.md", // Rebuild on content change
            "book/structure.txt", // Rebuild on structure change
            "src/**/*.c", // Rebuild on code change
            "src/**/*.h", // Rebuild on header change
            "book/template.typ" // Rebuild on style change
        ],
        "Test Patterns": [
            "companion_code/ch3_patterns/src/*.c",
            "companion_code/ch3_patterns/include/*.h",
            "companion_code/ch3_patterns/tests/**/*.cpp"
        ]
    },
    "triggerTaskOnSave.showNotifications": false // Keep it quiet
}